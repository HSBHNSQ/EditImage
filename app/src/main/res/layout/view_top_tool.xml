<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp">
    <ImageButton
        android:id="@+id/ib_back_top"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/fanhui"
        android:background="@color/colorClean"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingRight="14dp"
        android:paddingLeft="24dp"
        android:visibility="gone"
        android:scaleType="fitStart"/>
    <ImageButton
        android:id="@+id/ib_undo_top"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/undo_selector"
        android:background="@color/colorClean"
        android:padding="14dp"
        android:scaleType="fitCenter"/>
    <ImageButton
        android:id="@+id/ib_redo_top"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/redo_selector"
        android:background="@color/colorClean"
        android:padding="14dp"
        android:scaleType="fitCenter"/>
    <ImageButton
        android:id="@+id/ib_reset_top"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/shanchu"
        android:background="@color/colorClean"
        android:padding="14dp"
        android:scaleType="fitCenter"
        />
    <ImageButton
        android:id="@+id/ib_save_top"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/baocun"
        android:background="@color/colorClean"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:scaleType="fitCenter"/>
</LinearLayout>